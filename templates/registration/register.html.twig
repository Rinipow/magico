{# templates/registration/register.html.twig #}
{% extends "base.html.twig" %}

{% block page_title %}Registrazione{% endblock %}

{% block body %}
    {{ parent() }}
    {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}
    {{ form_end(form) }}
{% endblock %}